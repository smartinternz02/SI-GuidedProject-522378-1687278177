#include <Wire.h>
#include <Adafruit_MLX90614.h>
#include <SoftwareSerial.h>

#define MLX_ADDRESS 0x5A // MLX90614 I2C Address
Adafruit_MLX90614 mlx = Adafruit_MLX90614();

SoftwareSerial mySerial(10, 11); // RX, TX

void setup() {
  Serial.begin(9600);
  mySerial.begin(9600);

  mlx.begin();
}

void loop() {
  float ambient = mlx.readAmbientTempC();
  float object = mlx.readObjectTempC();

  Serial.print("Ambient: "); Serial.print(ambient); Serial.println(" 째C");
  Serial.print("Object: "); Serial.print(object); Serial.println(" 째C");

  mySerial.print("Ambient: "); mySerial.print(ambient); mySerial.println(" 째C");
  mySerial.print("Object: "); mySerial.print(object); mySerial.println(" 째C");

  delay(5000); // Adjust the delay as needed
}
